{
  "ci": {
    "collect": {
      "url": ["http://localhost:5173/"],
      "numberOfRuns": 3,
      "headless": true,
      "settings": {
        "chromeFlags": [
          "--no-sandbox",
          "--disable-gpu",
          "--disable-dev-shm-usage"
        ],
        "emulatedFormFactor": "desktop",
        "throttling": {
          "rttMs": 40,
          "throughputKbps": 10240,
          "cpuSlowdownMultiplier": 1,
          "requestLatencyMs": 0,
          "downloadThroughputKbps": 10240,
          "uploadThroughputKbps": 10240
        },
        "skipAudits": [],
        "onlyAudits": null
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "categories:performance": [
          "error",
          {
            "minScore": 0.9,
            "aggregationMethod": "median"
          }
        ],
        "categories:accessibility": [
          "error",
          {
            "minScore": 0.95,
            "aggregationMethod": "median"
          }
        ],
        "categories:best-practices": [
          "error",
          {
            "minScore": 0.9,
            "aggregationMethod": "median"
          }
        ],
        "categories:seo": [
          "error",
          {
            "minScore": 0.9,
            "aggregationMethod": "median"
          }
        ],
        "categories:pwa": [
          "warn",
          {
            "minScore": 0.8,
            "aggregationMethod": "median"
          }
        ],
        "metrics:first-contentful-paint": [
          "error",
          {
            "maxNumericValue": 2000,
            "aggregationMethod": "median"
          }
        ],
        "metrics:largest-contentful-paint": [
          "error",
          {
            "maxNumericValue": 4000,
            "aggregationMethod": "median"
          }
        ],
        "metrics:cumulative-layout-shift": [
          "error",
          {
            "maxNumericValue": 0.1,
            "aggregationMethod": "median"
          }
        ],
        "metrics:interaction-to-next-paint": [
          "warn",
          {
            "maxNumericValue": 200,
            "aggregationMethod": "median"
          }
        ],
        "metrics:total-blocking-time": [
          "error",
          {
            "maxNumericValue": 300,
            "aggregationMethod": "median"
          }
        ],
        "metrics:time-to-first-byte": [
          "error",
          {
            "maxNumericValue": 600,
            "aggregationMethod": "median"
          }
        ],
        "audits:first-meaningful-paint": ["warn"],
        "audits:speed-index": ["warn"],
        "audits:dom-size": [
          "warn",
          {
            "maxNumericValue": 1500
          }
        ],
        "audits:unused-javascript": ["warn"],
        "audits:unused-css": ["warn"],
        "audits:resource-summary": ["warn"]
      }
    }
  },
  "budgets": [
    {
      "resourceType": "script",
      "resourceCategory": "vendor",
      "type": "bundle",
      "budget": 300
    },
    {
      "resourceType": "script",
      "resourceCategory": "main",
      "type": "bundle",
      "budget": 400
    },
    {
      "resourceType": "stylesheet",
      "type": "bundle",
      "budget": 100
    },
    {
      "resourceType": "image",
      "type": "bundle",
      "budget": 200
    },
    {
      "resourceType": "font",
      "type": "bundle",
      "budget": 150
    },
    {
      "resourceType": "document",
      "type": "bundle",
      "budget": 50
    },
    {
      "resourceType": "total",
      "type": "bundle",
      "budget": 1024
    },
    {
      "resourceType": "script",
      "resourceCategory": "vendor",
      "type": "size",
      "budget": 300
    },
    {
      "resourceType": "script",
      "resourceCategory": "main",
      "type": "size",
      "budget": 400
    },
    {
      "resourceType": "stylesheet",
      "type": "size",
      "budget": 100
    }
  ]
}
